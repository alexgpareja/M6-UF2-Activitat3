<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.alexgil.Reserva" table="Reserva">
        <id name="idReserva" column="id_reserva">
            <generator class="identity"/>
        </id>

        <property name="dataReserva" column="data_reserva" not-null="true"/>
        <property name="dataDevolucio" column="data_devolucio" not-null="true"/>

        <many-to-one name="usuari" column="dni_usuari" not-null="true" class="com.alexgil.Usuari"/>
        
        <set name="llibres" table="Reserva_Llibres">
            <key column="id_reserva"/>
            <many-to-many column="id_llibre" class="com.alexgil.Llibre"/>
        </set>
    </class>
</hibernate-mapping>
